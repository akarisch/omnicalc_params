<h1> Calculate your monthly payment! </h1>

<form action="/payment/payment_result">
  <row>
    <label for= "apr_input">
      APR
    </label>
    <input id="apr_input" type="text" name="user_rate">
    <br>
  </row>
  <row>
    <label for= "years_input">
      Number of years
    </label>
    <input id="years_input" type="text" name="user_years">
    <br>
  </row>
  <row>
    <label for= "principal_input">
      Principal
    </label>
    <input id="principal_input" type="text" name="user_principal">
  </row>
